{
  "kind": "collectionType",
  "collectionName": "wallet_transactions",
  "info": {
    "singularName": "wallet-transaction",
    "pluralName": "wallet-transactions",
    "displayName": "Wallet Transactions",
    "description": "Track wallet transfers and transactions"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": ["transfer", "credit", "debit"],
      "required": true,
      "default": "transfer"
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "fromWallet": {
      "type": "enumeration",
      "enum": ["AccountBalance", "cryptoWalletBalance", "giftCardBalance"],
      "required": false
    },
    "toWallet": {
      "type": "enumeration",
      "enum": ["AccountBalance", "cryptoWalletBalance", "giftCardBalance"],
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed"],
      "default": "completed",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "reference": {
      "type": "string",
      "unique": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "wallet_transactions"
    }
  }
}
